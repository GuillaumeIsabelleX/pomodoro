{
    "name": "pomodoro",
    "displayName": "Pomodoro",
    "description": "Pomodoro for vscode",
    "version": "1.0.0",
    "publisher": "lkytal",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.startPomodoro",
                "title": "Start Pomodoro"
            },
            {
                "command": "extension.pausePomodoro",
                "title": "Pause Pomodoro"
            },
            {
                "command": "extension.resetPomodoro",
                "title": "Reset Pomodoro"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Pomodoro Configuration",
            "properties": {
                "pomodoro.workTime": {
                    "type": "number",
                    "default": 25,
                    "description": "Time of work, in minutes."
                },
                "pomodoro.puaseTime": {
                    "type": "number",
                    "default": 5,
                    "description": "Time of pause, in minutes"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.2.1",
        "vscode": "^1.1.0",
        "mocha": "^3.2.0",
        "@types/node": "^7.0.8",
        "@types/mocha": "^2.2.40"
    }
}